
{
    "apps": [
      {
        "name": "koa server",
        "script": "./dist/app.js",
        "watch": ["dist"],
        "log_date_format": "YYYY - MM - DD HH: mm Z",
        "instances": "max",
        "error_file": "./logs/app_err.log",
        "out_file": "./logs/app_out.log",
        "merge_logs": true,
        "exec_mode": "cluster",
        "max_memory_restart": "200M",
        "cron_restart": "0 1 * * * ",
        "env": {
          "NODE_ENV": "production"
        }
      }
    ]
  }